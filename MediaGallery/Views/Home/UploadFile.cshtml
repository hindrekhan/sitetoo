@{
    ViewData["Title"] = "Upload file";
    var messages = (ViewBag.Messages as List<string>) ?? new List<string>();
}

<div class="main">
    <div class="container">
        <div class="row margin-bottom-40">
            <h2>Upload file</h2>
            <div class="col-md-4">
                @if (messages.Count > 0)
                {
                    <div class="alert alert-success">
                        <ul>
                            @foreach(var message in messages)
                            {
                                <li>@message</li>
                            }
                        </ul>
                    </div>
                }
                <form enctype="multipart/form-data" method="post" action="@Url.Action("UploadFile", "Home", new { parentFolder = ViewBag.ParentFolderId })" >
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                    <input type="file" name="files" multiple />
                    @*<div class="form-group">
                        <label asp-for="Title" class="control-label"></label>
                        <input asp-for="Title" class="form-control" maxlength="10" />
                        <span asp-validation-for="Title" class="text-danger"></span>
                    </div>*@
                    <div class="form-group">
                        <input type="submit" value="Salvesta" class="btn btn-default" />
                    </div>
                </form>
            </div>
        </div>

        <div>
            <a asp-action="Index">Back to List</a>
        </div>
    </div>
</div>
