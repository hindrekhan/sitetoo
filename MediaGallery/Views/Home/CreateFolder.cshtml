@model MediaGallery.Models.EditFolderModel

@{
    ViewData["Title"] = "Edit";
}

<div class="main">
    <div class="container">
        <div class="row margin-bottom-40">
            <h2>Create folder</h2>
            <div class="col-md-4">
                <form asp-action="CreateFolder">
                    <input type="hidden" asp-for="Id" />
                    <input type="hidden" asp-for="parentFolderId" />

                    <div asp-validation-summary="All" class="text-danger"></div>

                    <div class="form-group">
                        <label asp-for="Title" class="control-label"></label>
                        <input asp-for="Title" class="form-control" maxlength="10" />
                        <span asp-validation-for="Title" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <input type="submit" value="Salvesta" class="btn btn-default" />
                    </div>
                </form>
            </div>
        </div>

        <div>
            <a asp-action="Index">Back to List</a>
        </div>
    </div>
</div>
